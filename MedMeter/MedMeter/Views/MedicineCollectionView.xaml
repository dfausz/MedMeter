<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MedMeter.ViewModels"
             xmlns:controls="clr-namespace:MedMeter.Controls"
             x:Class="MedMeter.Views.MedicineCollection">
  <ContentView.Content>
    <CollectionView ItemsSource="{Binding Medicines}" SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <ContentView Padding="8, 8, 8, 1">
                    <Frame HasShadow="True" Visual="Material" CornerRadius="0" BorderColor="Gray">
                        <StackLayout x:DataType="viewModels:MedicineViewModel" Orientation="Horizontal">
                            <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="Center" Margin="6">
                                <Label Text="{Binding Name}" TextColor="Black" FontSize="32" />
                                <Label Text="{Binding HoursLeft}" Margin="8,4" />
                            </StackLayout>
                            <Grid>
                                <ImageButton Source="{Binding Icon}" Clicked="Button_Clicked" CommandParameter="{Binding .}" BackgroundColor="LightSteelBlue" Padding="16"
                                             CornerRadius="100" WidthRequest="85" HeightRequest="85" VerticalOptions="Center" HorizontalOptions="Center" />
                                <controls:CircleProgress Progress="{Binding Progress}" HorizontalOptions="CenterAndExpand" HeightRequest="115" WidthRequest="115" />
                            </Grid>
                        </StackLayout>
                    </Frame>
                </ContentView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
  </ContentView.Content>
</ContentView>