<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedMeter.Views.AddMedicinePage"
             Title="Add Medicine">
    <ContentPage.Content>
        <StackLayout Margin="24" Spacing="24">
            <StackLayout>
                <Label Text="Medicine Name:" FontSize="Medium"></Label>
                <Entry Keyboard="Text" Text="{Binding Name}"></Entry>
            </StackLayout>
            <StackLayout>
                <Label Text="Hours:" FontSize="Medium"></Label>
                <Entry Keyboard="Numeric" Text="{Binding Hours}"></Entry>
            </StackLayout>
            <Button Text="Save" VerticalOptions="EndAndExpand" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>